<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/lingrad"
    tools:context=".convertImageToPdf">


    <Button
        android:id="@+id/PickImages"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="39dp"
        android:background="@drawable/background_sign_btn"
        android:fontFamily="@font/acme"
        android:text="Pick You Images To Make Your Story"
        android:textColor="@color/white"
        android:textSize="18sp" />


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="546dp"
        android:layout_below="@+id/PickImages"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="98dp"
        android:layout_marginBottom="0dp" />

    <Button
        android:id="@+id/button11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="101dp"
        android:background="@drawable/background_sign_btn"
        android:fontFamily="@font/acme"
        android:text="Upload Your Story to Cloud"
        android:textColor="@color/white"
        android:textSize="18sp" />

</RelativeLayout>